#sudo_run_cmd "dpkg -i /tmp/messenger.deb"

# Slack
info "Installing Slack"
run_cmd "curl -o /tmp/slack.deb https://downloads.slack-edge.com/linux_releases/slack-desktop-2.1.2-amd64.deb"
sudo_run_cmd "dpkg -i /tmp/slack.deb"


